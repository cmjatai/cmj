{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "types": ["vite/client", "vite-plugin-pwa/client"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
